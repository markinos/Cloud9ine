    <script type="text/javascript">
    // for deleting a graduate from the system
    $(document).ready(function() {
        var table = $('#example1').DataTable();
        $('#example1 tbody').on('click', '.btn-danger', function() {

            var gradId = table.row($(this).parents('tr')).data();

            // deleteGrad(gradId[0]);

            // console.log(row1[0]);

            table
                .row($(this).parents('tr'))
                .remove()
                .draw();

            $.ajax({
                url: '/delete',
                data: { gradId: gradId[0] },
                type: 'POST',
            });
        });

    });
    </script>

